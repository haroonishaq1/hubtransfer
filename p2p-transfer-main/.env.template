# Environment Variables Template
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# For local development (Docker Compose will override these)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=file_transfer
DB_USER=postgres
DB_PASSWORD=your_password_here

# For production (Render.com will provide DATABASE_URL automatically)
# DATABASE_URL=postgresql://username:password@hostname:port/database

# ===========================================
# AWS S3 CONFIGURATION (Required)
# ===========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
S3_BUCKET_NAME=your_bucket_name_here

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=5000

# File upload limits and settings
MAX_FILE_SIZE=52428800
FILE_EXPIRY_HOURS=168

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
# For local development
REACT_APP_API_URL=http://localhost:5000/api

# For production (update with your actual Render backend URL)
# REACT_APP_API_URL=https://your-backend-name.onrender.com/api
